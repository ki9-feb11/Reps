<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">商談記録一覧</h2>
  </div>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-header bg-light">
            <h5 class="card-title mb-0 text-truncate">
              <%= post.title %>
            </h5>
          </div>
          <div class="card-body">
            <div class="mb-2">
              <small class="text-muted">顧客名</small>
              <p class="mb-1 fw-semibold"><%= post.customer.name %></p>
            </div>
            
            <div class="mb-2">
              <small class="text-muted">ステータス</small>
              <p class="mb-1">
                <span class="badge bg-primary"><%= post.status_i18n %></span>
              </p>
            </div>
            
            <div class="mb-2">
              <small class="text-muted">商談結果</small>
              <p class="mb-1">
                <span class="badge bg-<%= post.result_status == 'success' ? 'success' : post.result_status == 'pending' ? 'warning' : 'secondary' %>">
                  <%= post.result_status_i18n %>
                </span>
              </p>
            </div>
            
            <div class="mb-3">
              <small class="text-muted">顧客の反応</small>
              <p class="mb-1">
                <span class="badge bg-<%= post.reaction == 'positive' ? 'success' : post.reaction == 'neutral' ? 'warning' : 'danger' %>">
                  <%= post.reaction_i18n %>
                </span>
              </p>
            </div>
          </div>
          
          <div class="card-footer bg-white border-top">
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">
                <i class="fas fa-calendar-alt me-1"></i>
                <%= l(post.created_at, format: :short) %>
              </small>
              <%= link_to "詳細", admin_post_path(post), class: "btn btn-sm btn-outline-info" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @posts.empty? %>
    <div class="text-center py-5">
      <div class="mb-3">
        <i class="fas fa-inbox fa-3x text-muted"></i>
      </div>
      <h4 class="text-muted">商談記録がありません</h4>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @posts %>
  </div>
</div>

<%= paginate @posts %>
