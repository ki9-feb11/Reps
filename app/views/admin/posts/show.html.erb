<div class="container mt-4">
  <!-- パンくずリスト -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb bg-light p-3 rounded">
      <li class="breadcrumb-item">
        <%= link_to admin_posts_path, class: "text-decoration-none" do %>
          <i class="fas fa-tachometer-alt me-1"></i>管理画面
        <% end %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to admin_posts_path, class: "text-decoration-none" do %>
          <i class="fas fa-file-alt me-1"></i>商談記録一覧
        <% end %>
      </li>
      <li class="breadcrumb-item active" aria-current="page">
        <i class="fas fa-eye me-1"></i>
        <%= truncate(@post.title, length: 30) %>
      </li>
    </ol>
  </nav>

  <div class="row">
    <!-- メイン情報セクション -->
    <div class="col-lg-8">
      <!-- ヘッダーカード -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-gradient-admin text-white">
          <div class="d-flex justify-content-between align-items-start">
            <div class="flex-grow-1">
              <h2 class="mb-2 text-white"><%= @post.title %></h2>
              <div class="d-flex align-items-center text-white-50">
                <i class="fas fa-user me-2"></i>
                <span class="me-3">投稿者: <%= @post.user.last_name %><%= @post.user.first_name %></span>
                <i class="fas fa-calendar-alt me-2"></i>
                <span><%= l(@post.created_at, format: :short) %></span>
              </div>
            </div>
            <div class="dropdown">
              <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="fas fa-cog me-1"></i>管理操作
              </button>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to admin_posts_path, class: "dropdown-item" do %>
                    <i class="fas fa-list me-2"></i>一覧へ戻る
                  <% end %>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <%= link_to admin_post_path(@post), method: :delete, 
                      data: { confirm: "本当に削除しますか？この操作は取り消せません。" }, 
                      class: "dropdown-item text-danger" do %>
                    <i class="fas fa-trash me-2"></i>削除
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="card-body">
          <!-- 顧客情報と基本ステータス -->
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="d-flex align-items-center p-3 bg-light rounded">
                <div class="me-3">
                  <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                       style="width: 50px; height: 50px;">
                    <i class="fas fa-building text-white fs-5"></i>
                  </div>
                </div>
                <div>
                  <small class="text-muted">顧客名</small>
                  <h5 class="mb-0 fw-bold">
                    <%= link_to @post.customer.name, admin_customer_path(@post.customer), 
                        class: "text-decoration-none text-primary" %>
                  </h5>
                </div>
              </div>
            </div>
            <div class="col-md-6 mt-3 mt-md-0">
              <div class="d-flex align-items-center p-3 bg-light rounded">
                <div class="me-3">
                  <div class="rounded-circle bg-info d-flex align-items-center justify-content-center" 
                       style="width: 50px; height: 50px;">
                    <i class="fas fa-user-tie text-white fs-5"></i>
                  </div>
                </div>
                <div>
                  <small class="text-muted">担当営業</small>
                  <h5 class="mb-0 fw-bold">
                    <%= link_to "#{@post.user.last_name}#{@post.user.first_name}", 
                        admin_user_path(@post.user), 
                        class: "text-decoration-none text-info" %>
                  </h5>
                </div>
              </div>
            </div>
          </div>
          
          <!-- 結果指標 -->
          <div class="row mb-4">
            <div class="col-md-4">
              <div class="text-center p-3 border rounded">
                <div class="mb-2">
                  <i class="fas fa-tasks fs-1 text-primary"></i>
                </div>
                <small class="text-muted">ステータス</small>
                <div class="mt-1">
                  <span class="badge bg-primary fs-6">
                    <%= @post.status_i18n %>
                  </span>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="text-center p-3 border rounded">
                <div class="mb-2">
                  <i class="fas fa-chart-line fs-1 text-<%= @post.result_status == 'success' ? 'success' : @post.result_status == 'pending' ? 'warning' : 'secondary' %>"></i>
                </div>
                <small class="text-muted">商談結果</small>
                <div class="mt-1">
                  <span class="badge bg-<%= @post.result_status == 'success' ? 'success' : @post.result_status == 'pending' ? 'warning' : 'secondary' %> fs-6">
                    <%= @post.result_status_i18n %>
                  </span>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="text-center p-3 border rounded">
                <div class="mb-2">
                  <i class="fas fa-smile fs-1 text-<%= @post.reaction == 'positive' ? 'success' : @post.reaction == 'neutral' ? 'warning' : 'danger' %>"></i>
                </div>
                <small class="text-muted">顧客の反応</small>
                <div class="mt-1">
                  <span class="badge bg-<%= @post.reaction == 'positive' ? 'success' : @post.reaction == 'neutral' ? 'warning' : 'danger' %> fs-6">
                    <%= @post.reaction_i18n %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- 商談内容カード -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-file-text me-2 text-primary"></i>商談内容
          </h5>
        </div>
        <div class="card-body">
          <div class="content-area p-4 bg-light rounded border">
            <%= simple_format(@post.body, { class: "mb-0 lh-lg" }, { wrapper_tag: "div" }) %>
          </div>
        </div>
      </div>

      <!-- タグセクション -->
      <% if @post.tags.any? %>
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-white border-bottom">
            <h5 class="mb-0">
              <i class="fas fa-tags me-2 text-primary"></i>タグ
            </h5>
          </div>
          <div class="card-body">
            <% @post.tags.each do |tag| %>
              <span class="badge bg-secondary me-2 mb-2 px-3 py-2">
                <i class="fas fa-tag me-1"></i><%= tag.name %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- サイドバー -->
    <div class="col-lg-4">
      <!-- 管理者統計カード -->
      <div class="card shadow-sm mb-4 border-warning">
        <div class="card-header bg-warning text-dark">
          <h5 class="mb-0">
            <i class="fas fa-crown me-2"></i>管理者情報
          </h5>
        </div>
        <div class="card-body">
          <div class="row g-2">
            <div class="col-6">
              <div class="text-center p-2 bg-light rounded">
                <div class="fw-bold text-primary fs-5">
                  <%= @post.user.posts.count %>
                </div>
                <small class="text-muted">総投稿数</small>
              </div>
            </div>
            <div class="col-6">
              <div class="text-center p-2 bg-light rounded">
                <div class="fw-bold text-success fs-5">
                  <%= @post.user.posts.where(result_status: 'success').count %>
                </div>
                <small class="text-muted">成功案件</small>
              </div>
            </div>
          </div>
          <div class="mt-3 text-center">
            <small class="text-muted">成功率</small>
            <div class="fw-bold text-info fs-5">
              <% if @post.user.posts.count > 0 %>
                <%= ((@post.user.posts.where(result_status: 'success').count.to_f / @post.user.posts.count) * 100).round(1) %>%
              <% else %>
                0%
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- 提案商品カード -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-box me-2 text-primary"></i>提案商品一覧
          </h5>
        </div>
        <div class="card-body">
          <% if @post.post_products.any? %>
            <% @post.post_products.each_with_index do |pp, index| %>
              <div class="d-flex justify-content-between align-items-center p-3 <%= index == 0 ? '' : 'border-top' %>">
                <div class="flex-grow-1">
                  <div class="fw-semibold text-dark mb-1">
                    <%= link_to pp.product.name, admin_product_path(pp.product), 
                        class: "text-decoration-none text-primary" %>
                  </div>
                  <small class="text-muted">
                    商品ID: #<%= pp.product.id %>
                    <% if pp.product.respond_to?(:category) %>
                      • <%= pp.product.category %>
                    <% end %>
                  </small>
                </div>
                <div class="text-end">
                  <div class="badge bg-info fs-6"><%= pp.quantity %> 個</div>
                  <% if pp.product.respond_to?(:wholesale_price) %>
                    <div class="small text-muted mt-1">
                      ¥<%= number_with_delimiter(pp.product.wholesale_price * pp.quantity) %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
            <% if @post.post_products.any? && @post.post_products.first.product.respond_to?(:wholesale_price) %>
              <div class="border-top pt-2 mt-2">
                <div class="d-flex justify-content-between align-items-center">
                  <strong>合計金額（卸価格）:</strong>
                  <strong class="text-primary">
                    ¥<%= number_with_delimiter(@post.post_products.sum { |pp| pp.product.wholesale_price * pp.quantity }) %>
                  </strong>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-box-open fa-2x text-muted mb-2"></i>
              <p class="text-muted mb-0">提案商品はありません</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- クイックアクション -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-bolt me-2 text-primary"></i>管理者アクション
          </h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <%= link_to admin_customer_path(@post.customer), class: "btn btn-outline-info" do %>
              <i class="fas fa-building me-2"></i>顧客管理画面
            <% end %>
            <%= link_to admin_user_path(@post.user), class: "btn btn-outline-success" do %>
              <i class="fas fa-user me-2"></i>営業担当詳細
            <% end %>
            <%= link_to admin_posts_path, class: "btn btn-outline-secondary" do %>
              <i class="fas fa-list me-2"></i>投稿一覧に戻る
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- コメントセクション -->
  <div class="row mt-5">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-gradient-secondary text-white">
          <h5 class="mb-0 text-white">
            <i class="fas fa-comments me-2"></i>コメント（管理者ビュー）
            <span class="badge bg-white text-dark ms-2"><%= @post.comments.count %></span>
          </h5>
        </div>
        <div class="card-body">
          <!-- コメント一覧 -->
          <div id="comment-list" class="mb-4">
            <% if @post.comments.any? %>
              <% @post.comments.order(created_at: :desc).each_with_index do |comment, index| %>
                <div class="comment-item p-3 <%= index > 0 ? 'border-top' : '' %>">
                  <div class="d-flex align-items-start">
                    <div class="me-3">
                      <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" 
                           style="width: 40px; height: 40px;">
                        <span class="text-white fw-bold">
                          <%= comment.user.last_name.first if comment.user.last_name.present? %>
                        </span>
                      </div>
                    </div>
                    <div class="flex-grow-1">
                      <div class="d-flex justify-content-between align-items-center mb-2">
                        <div>
                          <h6 class="mb-0 fw-semibold">
                            <%= link_to "#{comment.user.last_name}#{comment.user.first_name}", 
                                admin_user_path(comment.user), 
                                class: "text-decoration-none text-primary" %>
                          </h6>
                          <small class="text-muted">
                            <%= comment.user.position if comment.user.respond_to?(:position) %>
                            • <%= comment.user.region if comment.user.respond_to?(:region) %>
                          </small>
                        </div>
                        <small class="text-muted">
                          <i class="fas fa-clock me-1"></i>
                          <%= l(comment.created_at, format: :short) %>
                        </small>
                      </div>
                      <p class="mb-0 text-dark">
                        <%= simple_format(comment.body) %>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-5">
                <i class="fas fa-comment fa-3x text-muted mb-3"></i>
                <h6 class="text-muted">コメントはありません</h6>
                <p class="text-muted">この投稿にはまだコメントが投稿されていません。</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>