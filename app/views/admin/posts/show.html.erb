<div class="container mt-4">
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to "商談記録一覧", posts_path %>
      </li>
      <li class="breadcrumb-item active" aria-current="page">
        <%= truncate(@post.title, length: 30) %>
      </li>
    </ol>
  </nav>

  <div class="row">
    <!-- メイン情報カード -->
    <div class="col-lg-8">
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
          <div class="d-flex justify-content-between align-items-start">
            <h2 class="mb-0"><%= @post.title %></h2>
            <div class="d-flex gap-2">
              <% if @post.user == current_user %>
                <%= link_to "編集", edit_post_path(@post), class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "削除", post_path(@post), method: :delete, 
                    data: { confirm: "削除しますか？" }, class: "btn btn-sm btn-danger" %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <small class="text-muted">顧客名</small>
              <p class="mb-0 fw-semibold fs-5"><%= @post.customer.name %></p>
            </div>
            <div class="col-md-6 mb-3">
              <small class="text-muted">投稿日時</small>
              <p class="mb-0">
                <i class="fas fa-calendar-alt me-1"></i>
                <%= l(@post.created_at, format: :short) %>
              </p>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-4 mb-2">
              <small class="text-muted">ステータス</small>
              <p class="mb-0">
                <span class="badge bg-primary fs-6"><%= @post.status_i18n %></span>
              </p>
            </div>
            <div class="col-md-4 mb-2">
              <small class="text-muted">商談結果</small>
              <p class="mb-0">
                <span class="badge bg-<%= @post.result_status == 'success' ? 'success' : @post.result_status == 'pending' ? 'warning' : 'secondary' %> fs-6">
                  <%= @post.result_status_i18n %>
                </span>
              </p>
            </div>
            <div class="col-md-4 mb-2">
              <small class="text-muted">顧客の反応</small>
              <p class="mb-0">
                <span class="badge bg-<%= @post.reaction == 'positive' ? 'success' : @post.reaction == 'neutral' ? 'warning' : 'danger' %> fs-6">
                  <%= @post.reaction_i18n %>
                </span>
              </p>
            </div>
          </div>

          <div class="mb-3">
            <small class="text-muted">商談内容</small>
            <div class="mt-2 p-3 bg-light rounded">
              <%= simple_format(@post.body) %>
            </div>
          </div>

          <div class="mb-0">
            <small class="text-muted">タグ</small>
            <p class="mb-0">
              <% if @post.tags.any? %>
                <% @post.tags.each do |tag| %>
                  <span class="badge bg-secondary me-1"><%= tag.name %></span>
                <% end %>
              <% else %>
                <span class="text-muted">（タグなし）</span>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- サイドバー -->
    <div class="col-lg-4">
      <!-- 提案商品カード -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
          <h5 class="mb-0">
            <i class="fas fa-box me-2"></i>提案商品一覧
          </h5>
        </div>
        <div class="card-body">
          <% if @post.post_products.any? %>
            <% @post.post_products.each do |pp| %>
              <div class="d-flex justify-content-between align-items-center mb-2 p-2 bg-light rounded">
                <span class="fw-medium"><%= pp.product.name %></span>
                <span class="badge bg-info"><%= pp.quantity %> 個</span>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted mb-0">提案商品はありません</p>
          <% end %>
        </div>
      </div>

      <!-- アクションボタン -->
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <%= link_to "一覧に戻る", admin_posts_path, class: "btn btn-secondary btn-lg w-100" %>
        </div>
      </div>
    </div>
  </div>

  <!-- コメントセクション -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-light">
          <h5 class="mb-0">
            <i class="fas fa-comments me-2"></i>コメント
          </h5>
        </div>
        <div class="card-body">
          <!-- コメント一覧 -->
          <div id="comment-list" class="mb-4">
            <% if @post.comments.any? %>
              <%= render @post.comments %>
            <% else %>
              <p class="text-muted text-center mb-4">まだコメントはありません</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>