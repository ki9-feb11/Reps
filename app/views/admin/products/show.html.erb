<h1><%= @product.name %> の詳細</h1>

<table class="table">
  <tr><th>メーカー</th><td><%= @product.manufacturer %></td></tr>
  <tr><th>カテゴリー</th><td><%= @product.category %></td></tr>
  <tr><th>定価</th><td><%= number_to_currency(@product.list_price, unit: "¥") %></td></tr>
  <tr><th>卸単価</th><td><%= number_to_currency(@product.wholesale_price, unit: "¥") %></td></tr>
  <tr><th>原価</th><td><%= number_to_currency(@product.cost_price, unit: "¥") %></td></tr>
</table>

<div class="d-flex gap-2">
  <%= link_to "編集", edit_admin_product_path(@product), class: "btn btn-primary" %>
  <%= link_to "一覧へ戻る", admin_products_path, class: "btn btn-secondary" %>
  <%= button_to "削除", admin_product_path(@product), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger ms-auto" %>
</div>
