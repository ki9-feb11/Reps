<div class="card shadow-lg border-0">
  <!-- ヘッダー部分 -->
  <div class="card-header bg-white border-0 text-center py-4">
    <div class="mb-3">
      <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-warning" 
           style="width: 80px; height: 80px;">
        <i class="fas fa-user-shield text-dark" style="font-size: 2rem;"></i>
      </div>
    </div>
    <h3 class="mb-1 text-dark">管理者ログイン</h3>
    <p class="text-muted mb-0">システム管理者専用エリア</p>
  </div>

  <!-- セキュリティ警告 -->
  <div class="alert alert-warning mx-4 mt-0 mb-0" role="alert">
    <div class="d-flex align-items-center">
      <i class="fas fa-exclamation-triangle me-2"></i>
      <small>
        <strong>セキュリティ重要:</strong> 
        このエリアは管理者のみアクセス可能です。不正アクセスは記録されます。
      </small>
    </div>
  </div>

  <!-- ログインフォーム -->
  <div class="card-body px-4 py-4">
    <%= form_with model: resource, as: resource_name, url: session_path(resource_name),
        local: true, class: "needs-validation", novalidate: true do |f| %>
      <!-- 管理者ID -->
      <div class="mb-3">
        <%= f.label :email, "管理者ID", class: "form-label fw-medium" %>
        <div class="input-group">
          <span class="input-group-text bg-light border-end-0">
            <i class="fas fa-user-tie text-muted"></i>
          </span>
          <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                class: "form-control border-start-0 ps-0", 
                placeholder: "admin@company.com" %>
        </div>
      </div>

      <-- パスワード -->
      <div class="mb-4">
        <%= f.label :password, "管理者パスワード", class: "form-label fw-medium" %>
        <div class="input-group">
          <span class="input-group-text bg-light border-end-0">
            <i class="fas fa-key text-muted"></i>
          </span>
          <%= f.password_field :password, 
                autocomplete: "current-password",
                class: "form-control border-start-0 border-end-0 ps-0", 
                placeholder: "管理者パスワードを入力してください",
                id: "admin-password-field" %>
          <button class="btn btn-outline-secondary border-start-0" type="button" id="toggleAdminPassword">
            <i class="fas fa-eye"></i>
          </button>
        </div>
      </div>

      <!-- ログインボタン -->
      <div class="d-grid mb-0">
        <%= f.submit "管理者としてログイン", 
            class: "btn btn-warning btn-lg py-3" %>
      </div>
    <% end %>
  </div>
<!-- 一般ユーザーログインへのリンク -->
<div class="text-center mt-3">
<%= link_to "一般ユーザーとしてログイン", new_user_session_path, 
      class: "btn btn-outline-light btn-sm" %>
</div>
