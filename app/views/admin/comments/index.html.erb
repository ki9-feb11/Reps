<h2>コメント一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>コメント</th>
      <th>投稿タイトル</th>
      <th>投稿日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.last_name %></td>
        <td><%= comment.body %></td>
        <td><%= link_to comment.post.title, post_path(comment.post), target: "_blank" %></td>
        <td><%= l(comment.created_at, format: :short) %></td>
        <td>
          <%= link_to '削除', admin_comment_path(comment), method: :delete,
                      data: { confirm: '本当に削除しますか？' },
                      class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>