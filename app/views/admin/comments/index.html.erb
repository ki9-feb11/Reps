<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
      <i class="fas fa-box me-2 text-primary"></i>
      コメント一覧
    </h2>
  </div>

  <!-- コメント一覧 -->
  <div class="row">
    <% @comments.each do |comment| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm product-card">
          <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-start">
              <h5 class="card-title mb-0 text-truncate">
                <i class="fas fa-cube me-2 text-primary"></i>
                <%= comment.user.last_name %>
              </h5>
              <span>
                <%= comment.body %>
              </span>
              <span>
                <td><%= link_to comment.post.title, admin_post_path(comment.post), target: "_blank" %></td>
              </span>
              <span>
                <%= l(comment.created_at, format: :short) %>
              </span>
            </div>
          </div>
          <div class="card-footer bg-white border-top">
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">
                <i class="fas fa-calendar-alt me-1"></i>
                <%= comment.respond_to?(:created_at) ? l(comment.created_at, format: :short) : '作成日不明' %>
              </small>
              <div class="btn-group" role="group">
                <% if admin_signed_in? %>
                  <%= link_to '削除', admin_comment_path(comment), method: :delete,
                      data: { confirm: '本当に削除しますか？' },
                      class: "btn btn-danger btn-sm" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 空状態 -->
  <% if @comments.empty? %>
    <div class="text-center py-5">
      <div class="mb-3">
        <i class="fas fa-box-open fa-3x text-muted"></i>
      </div>
      <h4 class="text-muted">コメントが見つかりません</h4>
    </div>
  <% end %>

  <!-- ページネーション -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @comments if respond_to?(:paginate) %>
  </div>
</div>