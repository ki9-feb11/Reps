<h1>ユーザー管理</h1>

<%= link_to '新規ユーザー作成', new_admin_user_path, class: 'btn btn-primary mb-3' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>メールアドレス</th>
      <th>姓</th>
      <th>名</th>
      <th>作成日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= link_to '詳細', admin_user_path(user), class: 'btn btn-sm btn-success' %>
          <%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-sm btn-info' %>
          <%= link_to '削除', admin_user_path(user), method: :delete, confirm: '本当に削除しますか？', class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


