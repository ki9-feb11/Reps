<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
      <i class="fas fa-users me-2 text-primary"></i>
      ユーザー一覧
    </h2>
    <%= link_to "新しいユーザーを追加", new_admin_user_path, class: "btn btn-primary" %>
  </div>

  <!-- 検索・フィルターエリア -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="row g-3">
        <%= form_with url: admin_users_path, method: :get, local: true do |f| %>
          <div class="col-md-4">
            <%= f.label :name, "名前を検索" %>
            <%= f.text_field :name, placeholder: "姓 または 名" %>
          </div>
          <div class="col-md-3">
            <%= f.label :position, "役職を選択" %>
            <%= f.select :position, User.positions.keys.map { |pos| [pos.titleize, pos] }, include_blank: "すべて" %>
          </div>
          <%= f.submit "検索" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- ユーザーカード一覧 -->
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm user-card">
          <div class="card-body">
            <!-- ユーザー情報ヘッダー -->
            <div class="d-flex align-items-center mb-3">
              <div class="user-avatar me-3">
                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                     style="width: 50px; height: 50px;">
                  <span class="text-white fw-bold fs-5">
                    <%= user.last_name.first if user.last_name.present? %>
                  </span>
                </div>
              </div>
              <div class="flex-grow-1">
                <h5 class="card-title mb-1">
                  <%= user.last_name %><%= user.first_name %>
                </h5>
                <p class="text-muted small mb-0">
                  <i class="fas fa-envelope me-1"></i>
                  <%= user.email if user.respond_to?(:email) %>
                </p>
              </div>
            </div>

            <!-- ユーザー詳細情報 -->
            <div class="user-details">
              <div class="mb-2">
                <small class="text-muted">役職</small>
                <p class="mb-0">
                  <span class="badge bg-secondary">
                    <i class="fas fa-briefcase me-1"></i>
                    <%= user.position %>
                  </span>
                </p>
              </div>
              
              <div class="mb-3">
                <small class="text-muted">地域</small>
                <p class="mb-0">
                  <span class="badge bg-info">
                    <i class="fas fa-map-marker-alt me-1"></i>
                    <%= user.region %>
                  </span>
                </p>
              </div>

              <!-- 統計情報（もしあれば） -->
              <% if user.respond_to?(:posts) %>
                <div class="row text-center mb-3">
                  <div class="col-6">
                    <div class="border-end">
                      <div class="fw-bold text-primary"><%= user.posts.count %></div>
                      <small class="text-muted">投稿数</small>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="fw-bold text-success">
                      <%= user.posts.where(created_at: 1.month.ago..Time.current).count %>
                    </div>
                    <small class="text-muted">今月</small>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          
          <!-- カードフッター -->
          <div class="card-footer bg-white border-top">
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">
                <i class="fas fa-clock me-1"></i>
                最終ログイン: 
                <%= user.respond_to?(:last_sign_in_at) && user.last_sign_in_at ? 
                    l(user.last_sign_in_at, format: :short) : '未記録' %>
              </small>
              <div class="btn-group" role="group">
                <%= link_to "詳細", user_path(user), 
                    class: "btn btn-sm btn-outline-info" %>
                <% if user == current_admin %>
                  <%= link_to "編集", edit_admin_user_path(user), 
                      class: "btn btn-sm btn-outline-primary" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 空状態 -->
  <% if @users.empty? %>
    <div class="text-center py-5">
      <div class="mb-3">
        <i class="fas fa-users fa-3x text-muted"></i>
      </div>
      <h4 class="text-muted">ユーザーが見つかりません</h4>
      <p class="text-muted">新しいユーザーを追加してください。</p>
      <%= link_to "新しいユーザーを追加", new_admin_user_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <!-- ページネーション -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @users if respond_to?(:paginate) %>
  </div>
</div>