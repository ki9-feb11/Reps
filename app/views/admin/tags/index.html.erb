<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
      <i class="fas fa-box me-2 text-primary"></i>
      タグ一覧
    </h2>
    <%= link_to "新しいタグを追加", new_admin_tag_path, class: "btn btn-primary" %>
  </div>

  <!-- タグ一覧 -->
  <div class="row">
    <% @tags.each do |tag| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm product-card">
          <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-start">
              <h5 class="card-title mb-0 text-truncate">
                <i class="fas fa-cube me-2 text-primary"></i>
                <%= tag.name %>
              </h5>
              <span class="badge bg-success">
                <%= tag.post_tags.count %>
              </span>
            </div>
          </div>
          <div class="card-footer bg-white border-top">
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">
                <i class="fas fa-calendar-alt me-1"></i>
                <%= tag.respond_to?(:created_at) ? l(tag.created_at, format: :short) : '作成日不明' %>
              </small>
              <div class="btn-group" role="group">
                <% if admin_signed_in? %>
                  <%= link_to "編集", edit_admin_tag_path(tag), 
                      class: "btn btn-sm btn-outline-primary" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 空状態 -->
  <% if @tags.empty? %>
    <div class="text-center py-5">
      <div class="mb-3">
        <i class="fas fa-box-open fa-3x text-muted"></i>
      </div>
      <h4 class="text-muted">タグが見つかりません</h4>
      <p class="text-muted">新しいタグを追加してください。</p>
      <%= link_to "新しいタグを追加", new_admin_tag_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <!-- ページネーション -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @tags if respond_to?(:paginate) %>
  </div>
</div>