<h2>新規タグ作成</h2>

<%= form_with model: [:admin, @tag], local: true do |f| %>
  <div>
    <%= f.label :name, "タグ名" %><br>
    <%= f.text_field :name %>
    <% if @tag.errors[:name].any? %>
      <div style="color: red;"><%= @tag.errors[:name].first %></div>
    <% end %>
  </div>

  <div>
    <%= f.submit "作成", class: "btn btn-success" %>
  </div>
<% end %>