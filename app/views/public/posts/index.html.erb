<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>商談記録一覧</h1>
        <%= link_to '新規作成', new_post_path, class: 'btn btn-primary' %>
      </div>

      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">
                  <%= link_to post.title, post, class: 'text-decoration-none' %>
                </h6>
                <span class="badge badge-<%= status_color(post.status) %>">
                  <%= post.status_i18n %>
                </span>
              </div>
              
              <div class="card-body">
                <div class="mb-2">
                  <small class="text-muted">顧客:</small>
                  <strong><%= post.customer.full_name %></strong>
                </div>
                
                <div class="mb-2">
                  <small class="text-muted">商品:</small>
                  <%= post.name %>
                  <span class="badge badge-info"><%= post.quantity %>個</span>
                </div>
                
                <div class="mb-2">
                  <small class="text-muted">商談結果:</small>
                  <span class="badge badge-<%= result_status_color(post.result_status) %>">
                    <%= post.result_status_i18n %>
                  </span>
                </div>
                
                <div class="mb-2">
                  <small class="text-muted">顧客反応:</small>
                  <span class="badge badge-<%= reaction_color(post.reaction) %>">
                    <%= post.reaction_i18n %>
                  </span>
                </div>
                
                <p class="card-text text-muted">
                  <%= truncate(post.body, length: 100) %>
                </p>
              </div>
              
              <div class="card-footer">
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted">
                    <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
                  </small>
                  <div>
                    <%= link_to '詳細', post, class: 'btn btn-sm btn-outline-primary' %>
                    <%= link_to '編集', edit_post_path(post), class: 'btn btn-sm btn-outline-info' %>
                    <%= link_to '削除', post, method: :delete, 
                                confirm: '本当に削除しますか？', 
                                class: 'btn btn-sm btn-outline-danger' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- 商談記録がない場合 -->
      <% if @posts.empty? %>
        <div class="text-center py-5">
          <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
          <h3 class="text-muted">商談記録がありません</h3>
          <p class="text-muted">最初の商談記録を作成してみましょう</p>
          <%= link_to '新規作成', new_post_path, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>