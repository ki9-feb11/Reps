<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">商談記録一覧</h2>
    <%= link_to "新規商談記録を作成", new_post_path, class: "btn btn-primary" %>
  </div>

  <!-- 検索・フィルターエリア -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <%= form_with url: posts_path, method: :get, local: true, html: { class: "row g-3" } do %>
        <div class="col-md-4">
          <label class="form-label">タイトル検索</label>
          <%= text_field_tag :title, params[:title], class: "form-control", placeholder: "投稿タイトルを入力..." %>
        </div>
        <div class="col-md-3">
          <label class="form-label">投稿者（姓）</label>
          <%= text_field_tag :author_last_name, params[:author_last_name], class: "form-control", placeholder: "姓を入力..." %>
        </div>
        <div class="col-md-3">
          <label class="form-label">投稿者（名）</label>
          <%= text_field_tag :author_first_name, params[:author_first_name], class: "form-control", placeholder: "名を入力..." %>
        </div>
        <div class="col-md-2 d-flex align-items-end">
          <%= button_tag type: :submit, class: "btn btn-outline-primary w-100" do %>
            <i class="fas fa-search me-1"></i>検索
          <% end %>
        </div>
        <div class="col-12">
          <% if params[:title].present? || params[:author_last_name].present? || params[:author_first_name].present? %>
            <%= link_to "検索をクリア", posts_path, class: "btn btn-sm btn-outline-secondary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-header bg-light">
            <h5 class="card-title mb-0 text-truncate">
              <%= post.title %>
            </h5>
          </div>
          <div class="card-body">
            <div class="mb-2">
              <small class="text-muted">顧客名</small>
              <p class="mb-1 fw-semibold"><%= post.customer.name %></p>
            </div>
            
            <div class="mb-2">
              <small class="text-muted">ステータス</small>
              <p class="mb-1">
                <span class="badge bg-primary"><%= post.status_i18n %></span>
              </p>
            </div>
            
            <div class="mb-2">
              <small class="text-muted">商談結果</small>
              <p class="mb-1">
                <span class="badge bg-<%= post.result_status == 'success' ? 'success' : post.result_status == 'pending' ? 'warning' : 'secondary' %>">
                  <%= post.result_status_i18n %>
                </span>
              </p>
            </div>
            
            <div class="mb-3">
              <small class="text-muted">顧客の反応</small>
              <p class="mb-1">
                <span class="badge bg-<%= post.reaction == 'positive' ? 'success' : post.reaction == 'neutral' ? 'warning' : 'danger' %>">
                  <%= post.reaction_i18n %>
                </span>
              </p>
            </div>
          </div>
          
          <div class="card-footer bg-white border-top">
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">
                <i class="fas fa-calendar-alt me-1"></i>
                <%= l(post.created_at, format: :short) %>
              </small>
              <%= link_to "詳細", post_path(post), class: "btn btn-sm btn-outline-info" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @posts.empty? %>
    <div class="text-center py-5">
      <div class="mb-3">
        <i class="fas fa-inbox fa-3x text-muted"></i>
      </div>
      <h4 class="text-muted">商談記録がありません</h4>
      <p class="text-muted">新しい商談記録を作成してください。</p>
      <%= link_to "新規商談記録を作成", new_post_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @posts %>
  </div>
</div>