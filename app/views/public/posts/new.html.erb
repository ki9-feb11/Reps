<h2>新規投稿</h2>

<%= form_with model: @post, local: true do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render "form", post: @post, customers: @customers %>

  <%= f.submit "投稿する", class: "btn btn-primary" %>
<% end %>