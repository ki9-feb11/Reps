<div class="container mt-4">
  <!-- パンくずリスト -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb bg-light p-3 rounded">
      <li class="breadcrumb-item">
        <%= link_to posts_path, class: "text-decoration-none" do %>
          <i class="fas fa-home me-1"></i>商談記録一覧
        <% end %>
      </li>
      <li class="breadcrumb-item active" aria-current="page">
        <i class="fas fa-file-alt me-1"></i>
        <%= truncate(@post.title, length: 30) %>
      </li>
    </ol>
  </nav>

  <div class="row">
    <!-- メイン情報セクション -->
    <div class="col-lg-8">
      <!-- ヘッダーカード -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-gradient-primary text-white">
          <div class="d-flex justify-content-between align-items-start">
            <div class="flex-grow-1">
              <h2 class="mb-2 text-white"><%= @post.title %></h2>
              <div class="d-flex align-items-center text-white-50">
                <i class="fas fa-user me-2"></i>
                <span class="me-3"><%= @post.user.last_name %><%= @post.user.first_name %></span>
                <i class="fas fa-calendar-alt me-2"></i>
                <span><%= l(@post.created_at, format: :short) %></span>
              </div>
            </div>
            <% if @post.user == current_user %>
              <div class="dropdown">
                <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                  <i class="fas fa-cog me-1"></i>操作
                </button>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to edit_post_path(@post), class: "dropdown-item" do %>
                      <i class="fas fa-edit me-2"></i>編集
                    <% end %>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <%= link_to post_path(@post), method: :delete, 
                        data: { confirm: "本当に削除しますか？この操作は取り消せません。" }, 
                        class: "dropdown-item text-danger" do %>
                      <i class="fas fa-trash me-2"></i>削除
                    <% end %>
                  </li>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <!-- 顧客情報と基本ステータス -->
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="d-flex align-items-center p-3 bg-light rounded">
                <div class="me-3">
                  <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                       style="width: 50px; height: 50px;">
                    <i class="fas fa-building text-white fs-5"></i>
                  </div>
                </div>
                <div>
                  <small class="text-muted">顧客名</small>
                  <h5 class="mb-0 fw-bold">
                    <%= link_to @post.customer.name, customer_path(@post.customer), 
                        class: "text-decoration-none text-primary" %>
                  </h5>
                </div>
              </div>
            </div>
            <div class="col-md-6 mt-3 mt-md-0">
              <div class="row g-2">
                <div class="col-12">
                  <div class="text-center p-2 bg-light rounded">
                    <small class="text-muted">ステータス</small>
                    <div class="mt-1">
                      <span class="badge bg-primary fs-6"><%= @post.status_i18n %></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- 結果指標 -->
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="text-center p-3 border rounded">
                <div class="mb-2">
                  <i class="fas fa-chart-line fs-1 text-<%= @post.result_status == 'success' ? 'success' : @post.result_status == 'pending' ? 'warning' : 'secondary' %>"></i>
                </div>
                <small class="text-muted">商談結果</small>
                <div class="mt-1">
                  <span class="badge bg-<%= @post.result_status == 'success' ? 'success' : @post.result_status == 'pending' ? 'warning' : 'secondary' %> fs-6">
                    <%= @post.result_status_i18n %>
                  </span>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="text-center p-3 border rounded">
                <div class="mb-2">
                  <i class="fas fa-smile fs-1 text-<%= @post.reaction == 'positive' ? 'success' : @post.reaction == 'neutral' ? 'warning' : 'danger' %>"></i>
                </div>
                <small class="text-muted">顧客の反応</small>
                <div class="mt-1">
                  <span class="badge bg-<%= @post.reaction == 'positive' ? 'success' : @post.reaction == 'neutral' ? 'warning' : 'danger' %> fs-6">
                    <%= @post.reaction_i18n %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- 商談内容カード -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-file-text me-2 text-primary"></i>商談内容
          </h5>
        </div>
        <div class="card-body">
          <div class="content-area p-4 bg-light rounded border">
            <%= simple_format(@post.body, { class: "mb-0 lh-lg" }, { wrapper_tag: "div" }) %>
          </div>
        </div>
      </div>

      <!-- タグセクション -->
      <% if @post.tags.any? %>
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-white border-bottom">
            <h5 class="mb-0">
              <i class="fas fa-tags me-2 text-primary"></i>タグ
            </h5>
          </div>
          <div class="card-body">
            <% @post.tags.each do |tag| %>
              <span class="badge bg-secondary me-2 mb-2 px-3 py-2">
                <i class="fas fa-tag me-1"></i><%= tag.name %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- サイドバー -->
    <div class="col-lg-4">
      <!-- 提案商品カード -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-box me-2 text-primary"></i>提案商品一覧
          </h5>
        </div>
        <div class="card-body">
          <% if @post.post_products.any? %>
            <% @post.post_products.each_with_index do |pp, index| %>
              <div class="d-flex justify-content-between align-items-center p-3 <%= index == 0 ? '' : 'border-top' %>">
                <div class="flex-grow-1">
                  <div class="fw-semibold text-dark mb-1"><%= pp.product.name %></div>
                  <small class="text-muted">商品コード: #<%= pp.product.id %></small>
                </div>
                <div class="text-end">
                  <div class="badge bg-info fs-6"><%= pp.quantity %> 個</div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-box-open fa-2x text-muted mb-2"></i>
              <p class="text-muted mb-0">提案商品はありません</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- クイックアクション -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="fas fa-bolt me-2 text-primary"></i>クイックアクション
          </h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <%= link_to customer_path(@post.customer), class: "btn btn-outline-info" do %>
              <i class="fas fa-building me-2"></i>顧客詳細を見る
            <% end %>
            <%= link_to posts_path, class: "btn btn-outline-secondary" do %>
              <i class="fas fa-list me-2"></i>一覧に戻る
            <% end %>
            <% if @post.user == current_user %>
              <%= link_to edit_post_path(@post), class: "btn btn-primary" do %>
                <i class="fas fa-edit me-2"></i>この投稿を編集
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- コメントセクション -->
  <div class="row mt-5">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-gradient-secondary text-white">
          <h5 class="mb-0 text-white">
            <i class="fas fa-comments me-2"></i>コメント
            <span class="badge bg-white text-dark ms-2"><%= @post.comments.count %></span>
          </h5>
        </div>
        <div class="card-body">
          <!-- コメント一覧 -->
          <div id="comment-list" class="mb-4">
            <% if @post.comments.any? %>
              <% @post.comments.order(created_at: :desc).each_with_index do |comment, index| %>
                <div class="comment-item p-3 <%= index > 0 ? 'border-top' : '' %>">
                  <div class="d-flex align-items-start">
                    <div class="me-3">
                      <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" 
                           style="width: 40px; height: 40px;">
                        <span class="text-white fw-bold">
                          <%= comment.user.last_name.first if comment.user.last_name.present? %>
                        </span>
                      </div>
                    </div>
                    <div class="flex-grow-1">
                      <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="mb-0 fw-semibold">
                          <%= comment.user.last_name %><%= comment.user.first_name %>
                        </h6>
                        <small class="text-muted">
                          <i class="fas fa-clock me-1"></i>
                          <%= l(comment.created_at, format: :short) %>
                        </small>
                      </div>
                      <p class="mb-0 text-dark">
                        <%= simple_format(comment.body) %>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-5">
                <i class="fas fa-comment fa-3x text-muted mb-3"></i>
                <h6 class="text-muted">まだコメントはありません</h6>
                <p class="text-muted">最初のコメントを投稿してディスカッションを始めましょう。</p>
              </div>
            <% end %>
          </div>

          <!-- コメント投稿フォーム -->
          <div class="border-top pt-4">
            <div class="d-flex align-items-start">
              <div class="me-3">
                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                     style="width: 40px; height: 40px;">
                  <span class="text-white fw-bold">
                    <%= current_user.last_name.first if current_user.last_name.present? %>
                  </span>
                </div>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-3">新しいコメントを投稿</h6>
                <%= form_with(model: [@post, Comment.new], local: false, data: { turbo: false }, 
                    html: { class: "comment-form" }) do |f| %>
                  <div class="mb-3">
                    <%= f.text_area :body, rows: 3, class: "form-control", 
                        placeholder: "コメントを入力してください...", required: true %>
                  </div>
                  <div class="text-end">
                    <%= f.submit "コメントを投稿", class: "btn btn-primary px-4" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>