<h1>顧客情報を編集</h1>

<%= form_with model: [:public, @customer], local: true do |f| %>
  <% if @customer.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @customer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :contact_person, "担当者" %>
    <%= f.text_field :contact_person, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :key_person, "キーマン" %>
    <%= f.text_field :key_person, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :notes, "備考" %>
    <%= f.text_area :notes, rows: 4, class: "form-control" %>
  </div>

  <%= f.submit "保存", class: "btn btn-primary" %>
<% end %>

<%= link_to "戻る", public_customer_path(@customer), class: "btn btn-secondary mt-3" %>
