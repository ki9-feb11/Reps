<h1>顧客一覧</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>顧客名</th>
      <th>住所</th>
      <th>業種</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.name, customer_path(customer) %></td>
        <td><%= customer.adress %></td>
        <td><%= customer.industry %></td>
        <td><%= link_to "詳細", customer_path(customer), class: "btn btn-sm btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
