<h1><%= @customer.name %> の詳細</h1>

<table class="table">
  <tr><th>住所</th><td><%= @customer.adress %></td></tr>
  <tr><th>業種</th><td><%= @customer.industry %></td></tr>
  <tr><th>担当者</th><td><%= @customer.contact_person %></td></tr>
  <tr><th>キーマン</th><td><%= @customer.key_person %></td></tr>
  <tr><th>備考</th><td><%= simple_format(@customer.notes) %></td></tr>
</table>

<div class="d-flex gap-2">
  <%= link_to "編集", edit_customer_path(@customer), class: "btn btn-primary" %>
  <%= link_to "一覧へ戻る", customers_path, class: "btn btn-secondary" %>
</div>
