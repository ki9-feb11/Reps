<%= render 'search', user: @user %>

<h2>ユーザー一覧</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>名前</th>
      <th>役職</th>
      <th>地域</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.last_name %><%= user.first_name %></td>
        <td><%= user.position %></td>
        <td><%= user.region %></td>
        <td><%= link_to "詳細", user_path(user), class: "btn btn-sm btn-outline-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>